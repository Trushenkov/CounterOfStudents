<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_counter"
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_height"
        android:background="@drawable/ground"
        android:gravity="center"
        android:textSize="@dimen/txt_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_students" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button"
        android:background="@color/colorAccent"
        android:onClick="onClickBtnAddStudents"
        android:text="@string/btn_students"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_100"
        android:background="@color/colorBtnClear"
        android:onClick="onClickBtnClearStudents"
        android:text="@string/clear_students"
        android:padding="@dimen/padding_clear"
        />

</LinearLayout>